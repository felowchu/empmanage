<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
        <bean id="adminService" class="club.bestchu.service.impl.AdminServiceImpl">
            <property name="adminDao" ref="adminDao"></property>
        </bean>
    
        <bean id="deptService" class="club.bestchu.service.impl.DeptServiceImpl">
            <property name="deptDao" ref="deptDao"></property>
        </bean>

        <bean id="employeeService" class="club.bestchu.service.impl.EmployeeServiceImpl">
            <property name="employeeDao" ref="employeeDao"></property>
        </bean>
</beans>